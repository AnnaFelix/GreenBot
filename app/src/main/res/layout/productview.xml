<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fitsSystemWindows="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:layout_margin="@dimen/padding"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_compare"
            android:layout_width="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/compare"
            android:layout_height="40dp">
        </ImageView>
    </RelativeLayout>



    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        style="@style/Textprofiledata">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding"
        android:weightSum="10">
        <TextView
            android:id="@+id/type_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/Textprofiledata"
            android:textStyle="bold"
            android:text="@string/type">

        </TextView>
        <TextView
            android:id="@+id/type_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_below="@+id/description"
            style="@style/Textprofiledata"
            android:text="@string/profile">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding"
        android:weightSum="10">
        <TextView
            android:id="@+id/type_category_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/Textprofiledata"
            android:textStyle="bold"
            android:text="@string/category">

        </TextView>
        <TextView
            android:id="@+id/type_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_below="@+id/description"
            style="@style/Textprofiledata"
            android:text="@string/profile">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/padding"
        android:weightSum="10">
        <TextView
            android:id="@+id/type_provider_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/Textprofiledata"
            android:textStyle="bold"
            android:text="@string/provider">

        </TextView>
        <TextView
            android:id="@+id/type_provider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_below="@+id/description"
            style="@style/Textprofiledata"
            android:text="@string/profile">

        </TextView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_below="@+id/type"
        android:layout_marginTop="@dimen/padding"
        android:layout_height="200dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/img_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            card_view:cardCornerRadius="9dp"
            >
        <com.google.android.gms.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:ignore="MissingClass">
        </com.google.android.gms.maps.MapView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/map">

        </ImageView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scrollableview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_below="@+id/main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listItem="@layout/item_dessert" />


</LinearLayout>