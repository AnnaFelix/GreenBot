<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_margin_top">


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu_gallery"
            ></ImageView>

        <TextView
            android:id="@+id/txtName"
            android:layout_margin="@dimen/icon_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageview_icon"
            android:text=" ggggggggggggggggggggggggggggggggggggggggggggg"
            style="@style/Textprofile"></TextView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/imageview_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/socio_ecologique_icon"
                    ></ImageView>
                <ImageView
                    android:id="@+id/imageview_icon_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="@dimen/padding"
                    android:layout_toRightOf="@+id/imageview_icon_1"
                    android:layout_centerVertical="true"
                    android:background="@drawable/socio_culturel_icon"
                    ></ImageView>

            </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>