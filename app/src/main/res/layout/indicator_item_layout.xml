<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    card_view:cardCornerRadius="4dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/icon_margin_top"
        >
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <TextView
            android:id="@+id/txtName_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@android:color/holo_red_dark"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/icon_margin_top"
            android:layout_toRightOf="@+id/txtName"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
            android:layout_below="@+id/txtName"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_menu_gallery"
            ></ImageView>

        <TextView
            android:id="@+id/txtDoc"
            android:layout_margin="@dimen/icon_margin_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageview_icon"
            android:text="Small Textggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggg gggggggggggggg gggggggggggggggg gggggggggggggg ggggggggggg ggggggggggggggggggggggggggggggggg"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>
    </RelativeLayout>r
</androidx.cardview.widget.CardView>